{{#navigation-component title='Manage Membership' }}
<div class="row">
    <form class="col s12">
      <div class="row"><br>
		
		<div class="row">
			<div class="input-field col s6">
				<select>
				  <option value="" disabled selected>Select a Publication</option>
				  <option value="1">Publication 1</option>
				  <option value="2">Publication 2</option>
				  <option value="3">Publication 3</option>
				</select>
				<label>Current Publications</label>
			</div>
		</div>
		<br><hr><br>
		
		<div class="row">
			<h5>Publication Details</h5>
			<div class="row">
				<label for="pubType">Current Group Members</label><br>
				<div class="chip">
					Stephen
					<i class="material-icons">close</i>
				</div>
				<div class="chip">
					James
					<i class="material-icons">close</i>
				</div>
				<div class="chip">
					Simon
					<i class="material-icons">close</i>
				</div>
			</div><br>
			
			<h6>Group Members</h6><br>
			<div class="row">
				<div class="input-field col s4">
					<select multiple>
					  <option value="" disabled selected>Choose your option</option>
					  <option value="1">Member 1</option>
					  <option value="2">Member 2</option>
					  <option value="3">Member 3</option>
					</select>
					<label>Add Group Member</label>
				</div>
			</div>
			
			<div class="row">				
				<div class="input-field col s4">
					<input id="input_text" type="text" length="15">
					<label for="input_text">Add Group Member</label>
				</div>
			</div>
		</div>
      </div>
	  <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
	  <i class="material-icons right">send</i></button>
    </form>
</div>
{{/navigation-component }}

