{{outlet}}
{{!-- ember-cli-materialize modal container --}}

<div class="container">
	<div class="row">
		{{#md-card-panel class="indigo"
			bodyClass="white-text"
			id="card-panel"}}
			Select search criteria category:
		{{/md-card-panel}}
	</div>
	<div class="row">
		{{#md-radios
	    selection=radioSelection
	    optionValuePath='id'
	    optionLabelPath='text'}}
	    <p>{{md-radio value=1 name="Researcher"}}</p>
	    <p>{{md-radio value=2 name="Group"}}</p>
	    <p>{{md-radio value=3 name="Publication"}}</p>
	    <p>{{md-radio value=4 name="Venue"}}</p>
	    {{md-input label='Search criteria: ' class="col s6" validate=true}}
		{{/md-radios}}
	</div>
	<div class="row">
		{{md-btn text='Search' action='debug' class='indigo darken-2'}}
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col s2">
	    {{md-input label="Percent"
	        type="number"
	        value=percent
	        step=5
	        min=0
	        max=100}}
		</div>
    	<label class="col s2">Percentage of progress: </label>	    
	    {{md-loader mode="determinate" class="col s8" percent=percent}}
	</div>
	<div class="row">
		{{#md-table content=contentRequest class='striped' as |row|}}
			{{#md-table-col row=row key='email' header='Email'}}
				{{row.email}}
			{{/md-table-col}}
			{{md-table-col row=row valueBindingPath='name'}}
		{{/md-table}}
	</div>
</div>
{{md-modal-container}}