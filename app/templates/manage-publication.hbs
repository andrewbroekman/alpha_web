{{#navigation-component title='Manage Publication' }}
<div class="row">
    <form class="col s12">
      <div class="row"><br>
		<div class="row">
			<div class="input-field col s6">
				<select multiple>
				  <option value="" disabled selected>Select a Publication</option>
				  <option value="1">Publication 1</option>
				  <option value="2">Publication 2</option>
				  <option value="3">Publication 3</option>
				</select>
				<label>Current Publications</label>
			</div>
		</div>
		<br><hr><br>
		
		<div class="row">
			<h5>Publication Details</h5>
			<div class="row">
				<label for="pubType">Current Publication Categories</label><br>
				<div class="chip">
					Research
					<i class="material-icons">close</i>
				</div>
				<div class="chip">
					A.I
					<i class="material-icons">close</i>
				</div>
			</div>
			<br>
			<h6>Publication Categories</h6><br>
			<div class="row">
				<div class="input-field col s4">
					<select multiple>
					  <option value="" disabled selected>Choose your option</option>
					  <option value="1">Category 1</option>
					  <option value="2">Category 2</option>
					  <option value="3">Category 3</option>
					</select>
					<label>Add Category</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s4">
					<input id="input_text" type="text" length="15">
					<label for="input_text">Add Custom Category</label>
				</div>
			</div>			
			<br>
			<h6>Publication Status</h6>
			<div class="row">
			  <div class="input-field col s6">
				  <div class="switch">
					<label>
					  Inactive
					  <input type="checkbox">
					  <span class="lever"></span>
					  Active
					</label>
				  </div>
			  </div>
			</div>
			<br><br>
			
			<h6>Dates</h6><br>
			<div class="row">
				<div class="col s3">
					<label>Start Date</label>
					<input type="date" class="datepicker">
				</div>
				<div class="col s3">
					<label>End Date</label>
					<input type="date" class="datepicker">
				</div>
			</div>
		</div>  
	  <br>     
	  <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
	  <i class="material-icons right">send</i></button>
	  </div>
    </form>
</div>
{{/navigation-component }}

